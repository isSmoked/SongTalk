<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="spring.project.songtalk.RoomMapper">
	<!-- 작성, 하나, 전체, 수정, 삭제 -->
	
	<!-- 채팅방 개설 -->
	<insert id="insert">
		insert into ${stRoomTable}
		(${roomUser}, ${roomTitle}, ${roomContent}, ${roomCount})
		values (#{roomUser}, #{roomTitle}, #{roomContent}, #{roomCount})
	</insert>
	
	<!-- 채팅방 하나 가져오기 -->
	<select id="select" resultType="roomVO">
		select * from ${stRoomTable}
		where ${roomBno} = #{roomBno}
	</select>
	
	<!-- 채팅방 리스트 가져오기 -->
	<select id="selectList" resultType="roomVO">
		select * from ${stRoomTable}
		order by ${roomBno} desc
	</select>
	
	<!-- 채팅방 내용 갱신 -->
	<update id="updateContent">
		update ${stRoomTable}
		set ${roomContent} = #{roomContent}, ${roomCount} = #{roomCount}
		where ${roomBno} = #{roomBno}
	</update>
	
	<!-- 채팅방 인원수정 -->
	<update id="updateMember">
		update ${stRoomTable}
		set ${roomUser} = #{roomUser}
		where ${roomBno} = #{roomBno}
	</update>
	
	<!-- 채팅방 정보수정 -->
	<update id="updateInfo">
		update ${stRoomTable}
		set ${roomUser} = #{roomUser}, ${roomContent} = #{roomContent},
			${roomTitle} = #{roomTitle}
		where ${roomBno} = #{roomBno}
	</update>
	
	<!-- 키워드로 검색 -->
	<select id="selectKeyword" resultType="roomVO">
		select * from ${stRoomTable}
		where ${roomTitle} like #{roomTitle}
	</select>
	
	<!-- 채팅방 삭제 -->
	<delete id="delete">
		delete ${stRoomTable}
		where ${roomBno} = #{roomBno}
	</delete>
</mapper>